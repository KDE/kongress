{
    "id": "org.kde.kongress",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kongress",
    "tags": ["nightly"],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.Solid.PowerManagement",
        "--own-name=org.kde.kongressac"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "kirigami-addons",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.4.0.tar.xz",
                    "sha256": "56e3ceb52055b5603320ea08b27d3673d32a391a8d58646d998227d8b51f0a93",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ],
            "cleanup": [
                "/lib/cmake"
            ]
        },
        {
            "name": "kopeninghours",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kopeninghours",
                    "branch": "release/24.08"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "kosmindoormap",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-USE_KPUBLICTRANSPORT=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kosmindoormap",
                    "branch": "release/24.08"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "kongress",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}

