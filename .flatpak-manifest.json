{
    "id": "org.kde.kongress",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kongress",
    "tags": ["nightly"],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.Solid.PowerManagement",
        "--own-name=org.kde.kongressac"
    ],
    "separate-locales": false,
    "modules": [
    	{
	    "name": "kirigami-addons",
	    "buildsystem": "cmake-ninja",
	    "config-opts": [
		"-DBUILD_TESTING=OFF",
		"-DCMAKE_BUILD_TYPE=Release"
	    ],
	    "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kirigami-addons.git", "branch": "master" } ],
            "cleanup": [
                "/lib/cmake"
            ]
        },
        {
            "name": "kopeninghours",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kopeninghours",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "kosmindoormap",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-USE_KPUBLICTRANSPORT=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kosmindoormap",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "kongress",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}

